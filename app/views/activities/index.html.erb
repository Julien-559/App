<% @activities.each do |activity| %>
  <tr>
    <td><%= activity.user.full_name %></td>
    <td><%= activity.title %></td>
    <td><%= activity.content %></td>
    <br>
    <td><%= link_to 'Show', activity %></td>
    <% if current_user==activity.user %>
      <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
      <td><%= link_to 'Destroy', activity, confirm: 'Are you sure?', method: :delete %></td>
    <% else %>
      <td><%= link_to 'Request', new_activity_request_path(activity_id: activity), data: { activity_id: activity.id } %></td>
    <% end %>
    <br>
  </tr>
<% end %>
</table>

